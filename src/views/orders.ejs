<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- font awesome cdn link  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="/fontawesome-free-6.2.1-web/css/all.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />

    <!-- custom css file link  -->
    <link rel="stylesheet" href="/css/resert.css" />
    <link rel="stylesheet" href="/css/orders.css" />
    <title>Your Orders</title>
  </head>

  <body>
    <section>
      <nav class="Navbar">
        <img id="logo" src="/images/pic/logo.png" alt="this is logo" />
        <ul class="Navbar-Directory">
          <li class="Navbar-Directory-item">Home</li>
          <li class="Navbar-Directory-item">Dishes</li>
          <li class="Navbar-Directory-item">Menu</li>
          <li class="Navbar-Directory-item">Review</li>
          <li class="Navbar-Directory-item">Order</li>
          <li class="Navbar-Directory-item">About us</li>
        </ul>

        <div class="Navbar-Search">
          <input
            class="Navbar-Search-input"
            type="search"
            placeholder="Search"
          />
          <button class="Navbar-Search-btn">
            <span>
              <i class="fa-solid fa-search"></i>
            </span>
          </button>
        </div>

        <div class="Nav-Subnav">
          <div class="Nav-Subnav-love">
              <i class="fa-regular fa-heart"></i>
          </div>
          <div class="Nav-Subnav-cart">
              <a href="/accb_food.vn/cart">
                  <i class="fa-sharp fa-solid fa-cart-plus"></i>
              </a>
          </div>
          <div class="Nav-Subnav-account">
              <a href="/accb_food.vn/profile">
                  <i class="fa-regular fa-user"></i>
              </a>
          </div>
      </div>
      </nav>
    </section>

    <div class="go_back">
      <form action="/accb_food.vn/cart">
        <button type="submit">
        <i class="fa-solid fa-arrow-left"></i>
        Cart
      </button>
      </form>
    </div>

    <section>
      <div class="container">
        <div class="top">
          <span>Your Orders</span>
          <span>Track Your Orders</span>
        </div>
        <div class="list">

          <%for(let i=0; i<dataOrders.length; i++){%>
            <%if(dataOrders[i].DH_TINHTRANG!='Đã hủy'){ %>
              <div class="cart">
                <div class="left_cart">
                  <img src="/images/pic/logo.png" alt="" />
                </div>
                <div class="right_cart">
                  <div class="stars">
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                  </div>
                  <span class="name_order"><%=dataOrders[i].DH_MA%></span>
                  <div class="bottom_cart">
                    <span
                      >Totals cost:
                      <span
                        >$
                        <span> <%=dataOrders[i].DH_TONGTIEN%> </span>
                      </span>
                    </span>
                    <div class="status">
                      <span
                        >Delivery status:
                        <span><%=dataOrders[i].DH_TINHTRANG%></span>
                      </span>
                      <form action="/accb_food.vn/process_cancel_order/id/<%=dataOrders[i].DH_MA%>" method="post">
                        <button>Cancel</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <%}%>
          <%}%>
        </div>
      </div>
    </section>

    <footer>
      <span>Copyright © 2022 ACCB Food Inc.</span>
    </footer>

    <script
      src="https://kit.fontawesome.com/9382b228af.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
